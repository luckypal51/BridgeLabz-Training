package com.objectmodeling;
import java.util.*;
public class Customer {

	public static void main(String[] args) {
		Library l = new Library();
		Scanner sc = new Scanner(System.in);
		l.addBook("java programming","Lucky Pal",1200);
		l.addBook("java oops","Lucky Pal",1100);
		l.addBook("Advance java programming","Lucky Pal",1800);
		System.out.println("------Welcome to the Library------");
		do {
			System.out.println("Enter v to view list    :");
			System.out.println("Enter b to borrow book  :");
			System.out.println("Enter r to return book  :");
			System.out.println("Enter a to add book     :");
			System.out.println("Enter e to exit         :");
			char ch =sc.next().charAt(0);
			if(ch=='v'||ch=='V') {
				l.view();
			}else if(ch=='b'||ch=='B') {
			    System.out.println("Enter the name of book  :");
			    String s = sc.nextLine();
			    sc.nextLine();
			    String str="java Oops";
				l.borrow(s);
			}else if(ch=='r'||ch=='R') {
			    System.out.println("Enter the name of book  :");
				String s = sc.nextLine();
			    sc.nextLine();
				l.returnBook(s);
			}else if(ch=='a'||ch=='A') {
				System.out.println("Enter the name of book  :");
				String name = sc.nextLine();
				
				System.out.println("Enter the author name   :");
				String author = sc.nextLine();
				
				System.out.println("Enter the price         :");
				float price = sc.nextFloat();
				sc.nextLine();
				l.addBook(name, author, price);
			}else if(ch=='e'||ch=='E') {
				System.out.println("Thank you come again ");
				break;
			}
		}while(true);

	}

}
