package com.objectmodeling;
import java.util.*;

//import jdk.internal.org.jline.terminal.TerminalBuilder.SystemOutput;

public class Library {
    static ArrayList<Book> list = new ArrayList<>();
     
     public  void view() {
    	 System.out.println("The List Of Books :");
    	 for(Book a:list) {
    		 System.out.println("----------------------------------");
    		 System.out.println("Book name      : "+a.getBookName());
    		 System.out.println("Author name    : "+a.getAuthor());
    		 System.out.println("Book price     : "+a.getPrice());
    		 System.out.println("Book available : "+a.isAvailable());
    	 }
     }
     public void borrow(String bookName) {
    	 
    	// bookName = bookName.toLowerCase();
