     public void returnBook(String bookName) {
    	 bookName = bookName.toLowerCase();
    	 for(Book a:list) {
    		 if(a.getBookName().equals(bookName)) {
    			 if(a.isAvailable()) {
    				 System.out.println("The book is already returned !");
    				 return;
    			 }else {
    				 a.setAvailable(true);
    				 System.out.println("The book is returned successfully!");
    				 return;
    			 }
    		 }
    		
    	 }
    	 System.out.println("The book is not present !");
     }
     public void addBook(String bookName, String author, float price) {
    	 bookName = bookName.toLowerCase();
    	 Book b = new Book(author,bookName,price);
    	 list.add(b);
    	 System.out.println("The book is successfully added in the list");
     }
}
